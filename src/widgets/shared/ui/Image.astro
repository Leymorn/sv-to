---
interface Props {
    src: string;
    alt?: string;
    width?: string;
    height?: string;
    objectFit?: string;
    imageWidth?: string;
    imageHeight?: string;
}
const {
    src,
    alt = 'image',
    width = '100%',
    height = '100%',
    objectFit = 'contain',
    imageWidth = '100%',
    imageHeight = '100%',
} = Astro.props;
---

<div class="image">
    <img src={src} alt={alt} />
</div>

<style
    lang="scss"
    scoped
    define:vars={{
        width: `${width}`,
        height: `${height}`,
        objectFit: `${objectFit}`,
        imageWidth: `${imageWidth}`,
        imageHeight: `${imageHeight}`,
    }}
>
    .image {
        display: flex;
        align-items: center;
        height: var(--height);
        width: var(--width);

        img {
            object-fit: var(--objectFit);
            width: var(--imageWidth);
            height: var(--imageHeight);
        }
    }
</style>
